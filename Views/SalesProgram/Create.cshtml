@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewData["Title"] = "Add Sales Program";
}

<h1 class="mb-4">Add Sales Program</h1>
<form method="post">
    <div class="mb-3">
        <label>Program Name</label>
        <input type="text" name="NamaProgram" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Discount</label>
        <input type="number" step="0.01" name="Diskon" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Applicable Date</label>
        <input type="date" name="TanggalBerlaku" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Applicable Time</label>
        <input type="time" name="JamBerlaku" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Menu (Optional)</label>
        <select name="MenuId" class="form-select">
            <option value="">-- All Menus --</option>
            @foreach (var menu in ViewBag.Menus as List<(ulong MenuId, string NamaMenu)>)
            {
                    <option value="@menu.MenuId">@menu.NamaMenu</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label>Product Category (Optional)</label>
        <select name="KategoriProduk" class="form-select">
            <option value="">-- All Categories --</option>
            <option value="cemilan">Cemilan</option>
            <option value="makanan">Makanan</option>
            <option value="minuman">Minuman</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mb-3">Save</button>
</form>
