@model Final.Models.Menu

@{
    ViewData["Title"] = "Edit Menu";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h1 class="mb-4">Edit Menu</h1>
<form method="post">
    <input type="hidden" name="MenuId" value="@Model.MenuId" />

    <div class="mb-3">
        <label for="nama_menu" class="form-label">Menu Name</label>
        <input type="text" id="nama_menu" name="NamaMenu" class="form-control" value="@Model.NamaMenu" required />
    </div>
    <div class="mb-3">
        <label for="deskripsi" class="form-label">Description</label>
        <textarea id="deskripsi" name="Deskripsi" class="form-control" rows="3" required>@Model.Deskripsi</textarea>
    </div>
    <div class="mb-3">
        <label for="harga" class="form-label">Price</label>
        <input type="number" step="0.01" id="harga" name="Harga" class="form-control" value="@Model.Harga" required />
    </div>
    <div class="mb-3">
        <label for="kategori" class="form-label">Category</label>
        <select id="kategori" name="Kategori" class="form-select" required>
            <option value="cemilan" selected="@(Model.Kategori == "cemilan")">Cemilan</option>
            <option value="makanan" selected="@(Model.Kategori == "makanan")">Makanan</option>
            <option value="minuman" selected="@(Model.Kategori == "minuman")">Minuman</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="gambar" class="form-label">Image Path</label>
        <input type="text" id="gambar" name="Gambar" class="form-control" value="@Model.Gambar" />
    </div>
    <button type="submit" class="btn btn-primary mb-3">Update</button>
</form>
