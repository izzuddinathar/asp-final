@model Final.Models.Order

@{
    Layout = "~/Views/Shared/Layout.cshtml";
    ViewData["Title"] = "Edit Order";
}

<h1 class="mb-4">Edit Order</h1>
<form method="post">
    <input type="hidden" name="OrderId" value="@Model.OrderId" />
    <div class="mb-3">
        <label>Table</label>
        <select name="NomorMeja" class="form-select" required>
            @foreach (var table in ViewBag.Tables as List<int>)
            {
                <option value="@table" selected="@(table == Model.NomorMeja)">@table</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label>Menu</label>
        <select name="MenuId" class="form-select" required>
            @foreach (var menu in ViewBag.Menus as List<(ulong MenuId, string NamaMenu)>)
            {
                <option value="@menu.MenuId" selected="@(menu.MenuId == Model.MenuId)">@menu.NamaMenu</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label>Quantity</label>
        <input type="number" name="Jumlah" class="form-control" value="@Model.Jumlah" required />
    </div>
    <div class="mb-3">
        <label>Status</label>
        <select name="StatusPesanan" class="form-select" required>
            <option value="dipesan" selected="@(Model.StatusPesanan == "dipesan")">Dipesan</option>
            <option value="diproses" selected="@(Model.StatusPesanan == "diproses")">Diproses</option>
            <option value="disajikan" selected="@(Model.StatusPesanan == "disajikan")">Disajikan</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mb-3">Update</button>
</form>
